@{
    ViewData["Title"] = "Password Reset Link Sent";
}

<style>
    body {
        background: url('/images/background.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .glass-card {
        max-width: 500px;
        margin: 80px auto;
        padding: 30px 40px;
        border-radius: 20px;
        background: rgba(30, 30, 30, 0.6); /* darker glassmorphism */
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #f1f1f1;
        text-align: center;
    }

        .glass-card h3 {
            color: #00ffcc;
            margin-bottom: 20px;
        }

        .glass-card p {
            font-size: 16px;
            margin-bottom: 20px;
        }

        .glass-card a.btn {
            background-color: #00bfa5;
            border: none;
            color: white;
            padding: 10px 25px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
        }

            .glass-card a.btn:hover {
                background-color: #008e76;
            }
</style>

<div class="glass-card">
    <h3>📧 Reset Link Sent</h3>
    <p>@ViewBag.Message ?? "If an account with the provided email exists, a reset link has been sent to it."</p>
    <a class="btn" asp-action="Login" asp-controller="Account">Back to Login</a>
</div>
