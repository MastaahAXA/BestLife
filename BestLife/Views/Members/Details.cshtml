@model BestLife.Models.Members

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Members</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Full Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            ID Number:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IDNO)
        </dd>
        <dt class="col-sm-2">
            Phone Number:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNo)
        </dd>
        <dt class="col-sm-2">
            Date of Birth:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DOB)
        </dd>
        <dt class="col-sm-2">
            Gender:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            Date Joined:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateJoined)
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Referral Code:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReferralCode)
        </dd>
        <dt class="col-sm-2">
            Invited By:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvitedByCode)
        </dd>
        <dt class="col-sm-2">
            Total Cash back:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalCashback)
        </dd>
        <dt class="col-sm-2">
            Total Voucher:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalVoucher)
        </dd>
        <dt class="col-sm-2">
            Total Savings:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalSavings)
        </dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">
        ✏️ Edit
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
        🔙 Back to List
    </a>
    <a asp-action="MemberPayments" asp-route-memberId="@Model?.id" class="btn btn-info ms-2">
        <i class="fas fa-credit-card"></i> View Payment Records
    </a>
</div>

