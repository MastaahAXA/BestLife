@model BestLife.Models.Members

@{
    ViewData["Title"] = "Edit Member";
}

<h2 class="mb-4">Edit Member</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Full Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IDNO" class="form-label">ID Number</label>
                <input asp-for="IDNO" class="form-control" />
                <span asp-validation-for="IDNO" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhoneNo" class="form-label">Phone Number</label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DOB" class="form-label">Date of birth</label>
                <input asp-for="DOB" type="date" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">Select Gender</option>
                    <option value="Male" selected="@Model.Gender == " Male"">Male</option>
                    <option value="Female" selected="@Model.Gender == " Female"">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateJoined" class="form-label">Date joined</label>
                <input asp-for="DateJoined" type="date" class="form-control" />
                <span asp-validation-for="DateJoined" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ReferralCode" class="form-label">Referral code</label>
                <input asp-for="ReferralCode" class="form-control" />
                <span asp-validation-for="ReferralCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="InvitedByCode" class="form-label">Invite by</label>
                <input asp-for="InvitedByCode" class="form-control" />
                <span asp-validation-for="InvitedByCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalCashback" class="form-label">Total cash Back</label>
                <input asp-for="TotalCashback" class="form-control" />
                <span asp-validation-for="TotalCashback" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalVoucher" class="form-label">Total Voucher</label>
                <input asp-for="TotalVoucher" class="form-control" />
                <span asp-validation-for="TotalVoucher" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalSavings" class="form-label">Total Savings</label>
                <input asp-for="TotalSavings" class="form-control" />
                <span asp-validation-for="TotalSavings" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
