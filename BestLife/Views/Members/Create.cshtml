@model BestLife.Models.Members

@{
    ViewData["Title"] = "Create Member";
}

<h4>New Members Form</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Full Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IDNO" class="form-label">ID Number</label>
                <input asp-for="IDNO" class="form-control" />
                <span asp-validation-for="IDNO" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhoneNo" class="form-label">Phone Number</label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DOB" class="form-label">Date of Birth</label>
                <input asp-for="DOB" type="date" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateJoined" class="form-label">Date Joined</label>
                <input asp-for="DateJoined" type="date" class="form-control" />
                <span asp-validation-for="DateJoined" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ReferralCode" class="form-label">Referral Code</label>
                <input asp-for="ReferralCode" class="form-control" />
                <span asp-validation-for="ReferralCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="InvitedByCode" class="form-label">Invited By Code</label>
                <input asp-for="InvitedByCode" class="form-control" />
                <span asp-validation-for="InvitedByCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalCashback" class="form-label">Total Cash back</label>
                <input asp-for="TotalCashback" class="form-control" />
                <span asp-validation-for="TotalCashback" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalVoucher" class="form-label">Total Voucher</label>
                <input asp-for="TotalVoucher" class="form-control" />
                <span asp-validation-for="TotalVoucher" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="TotalSavings" class="form-label">Total Savings</label>
                <input asp-for="TotalSavings" class="form-control" />
                <span asp-validation-for="TotalSavings" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">✅ Submit</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
