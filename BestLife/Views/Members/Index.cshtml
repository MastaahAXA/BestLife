@model IEnumerable<BestLife.Models.Members>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table tr {
        font-size: 12px;
    }
</style>

<h1>Members Table</h1>
<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-user-plus"></i> New Member
    </a>
</p>


@* <p>
    <a asp-action="Create">+ New Member</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                Member Name
            </th>
            <th>
                Id No
            </th>
            <th>
                Phone No
            </th>
            <th>
                D.O.B
            </th>
            <th>
                Gender
            </th>
            <th>
                Joined Date
            </th>
            <th>
                Email
            </th>
            <th>
                Referral Code
            </th>
            <th>
                Invited By
            </th>
            <th>
                Cash back
            </th>
            <th>
                Total Voucher
            </th>
            <th>
                Savings
            </th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Add Paymeny</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDNO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateJoined)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReferralCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvitedByCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCashback)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalVoucher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalSavings)
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.id" title="Details" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" title="Edit" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.id" title="Delete" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                </td>
                <td>
                    <a asp-action="AddPayment" asp-route-memberId="@item.id" title="Add Payment" class="btn btn-sm btn-success"><i class="fas fa-credit-card"></i></a>
                </td>


                @* <td>
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a> |
                    <a asp-action="AddPayment" asp-route-memberId="@item.id">Add Payment</a>
                </td> *@

            </tr>
        }
    </tbody>
</table>
