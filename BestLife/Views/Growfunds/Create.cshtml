@model BestLife.Models.Growfund

@{
    ViewData["Title"] = "Create";
}

<h4>Grow funds</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MemberId" class="control-label">Member Name</label>
                <select asp-for="MemberId" class ="form-control" asp-items="ViewBag.MemberId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BoardLevel" class="control-label">Board Level</label>
                <input asp-for="BoardLevel" class="form-control" />
                <span asp-validation-for="BoardLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment" class="control-label">Payment</label>
                <input asp-for="Payment" class="form-control" />
                <span asp-validation-for="Payment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cashback" class="control-label">Cash Back</label>
                <input asp-for="Cashback" class="form-control" />
                <span asp-validation-for="Cashback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher" class="control-label"></label>
                <input asp-for="Voucher" class="form-control" />
                <span asp-validation-for="Voucher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NextLevel" class="control-label">Next Level</label>
                <input asp-for="NextLevel" class="form-control" />
                <span asp-validation-for="NextLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Savings" class="control-label"></label>
                <input asp-for="Savings" class="form-control" />
                <span asp-validation-for="Savings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvitedBy" class="control-label">Invited By</label>
                <input asp-for="InvitedBy" class="form-control" />
                <span asp-validation-for="InvitedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateJoined" class="control-label">Date joined</label>
                <input asp-for="DateJoined" class="form-control" />
                <span asp-validation-for="DateJoined" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">✅ Submit</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
