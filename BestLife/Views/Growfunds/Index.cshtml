@model IEnumerable<BestLife.Models.Growfund>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table tr {
        font-size: 12px;
    }
</style>

<h1>Grow Funds</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-money-bill"></i> New Funds
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Member
            </th>
            <th>
                Board Level
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                Cash back
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voucher)
            </th>
            <th>
                Next Level
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Savings)
            </th>
            <th>
                Invited By
            </th>
            <th>
                Date Joined
            </th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoardLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cashback)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voucher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Savings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvitedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateJoined)
            </td>                
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" title="Details" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" title="Edit" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
